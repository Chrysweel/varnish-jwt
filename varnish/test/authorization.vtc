varnishtest "test jwt authorization"

server s1 {
	rxreq

	txresp
} -start


varnish v1 -vcl+backend {

		import std;
		import digest;
		import crypto;
		import blob;

		include "jwt.vcl";

		sub vcl_recv {

		  call jwt;

		  return (hash);
		}


} -start

